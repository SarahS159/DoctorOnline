@section scripts{
    <script src="~/lib/DataTables/jQuery-3.6.0/jquery-3.6.0.js"></script>
    <script src="~/lib/DataTables/datatables.js"></script>
    <script src="~/lib/DataTables/DataTables-1.11.5/js/dataTables.bootstrap4.js"></script>
    <script>
      
            $(document).ready(function () {
               let my_dt =  $('#availbleDoctors').DataTable({
                    responsive: true,
                    ajax: {
                        url: "/api/Doctor/getAvailbleDoctors",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "doctorId"
                        },
                        {
                            data: "doctorName"
                        },
                        {
                            data: "doctorGsm"
                        },
                        {
                            data: "doctorSpeciality"
                        },
                        {
                            data: "doctorCity"
                        },
                        {
                            data: "doctorAddress"
                        },
                        {
                            data: "doctorStatus",
                            render: function (data) {
                                return '<span>Availble</span>'

                            }
                        }
                    ]
                });
                setInterval(()=> my_dt.ajax.reload() , 1000 * 10);
            });
        
    </script>
}
<table style="width:100%" id="availbleDoctors" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Doctor Id</th>
            <th>Name</th>
            <th>Number</th>
            <th>Speciality</th>
            <th>City</th>
            <th>Address</th>
            <th>Status</th>

        </tr>
    </thead>
    <tbody></tbody>
</table>